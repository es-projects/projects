<div class="section">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th colspan="3"><%= t(:options) %></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= link_to t(:show), user %></td>
            <td><%= link_to t(:edit), edit_user_path(user) %></td>
            <td><%= link_to t(:destroy), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
  </div>
</div>